{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "System Game Data",
  "type": "object",
  "required": [
    "version",
    "loader",
    "loader_version",
    "created_at",
    "items",
    "tags"
  ],
  "properties": {
    "version": {
      "type": "string"
    },
    "loader": {
      "type": "string"
    },
    "loader_version": {
      "type": "string"
    },
    "created_at": {
      "type": "string"
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id"
        ],
        "properties": {
          "id": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "entries"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "entries": {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        },
        "additionalProperties": false
      }
    },
    "recipes": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "type",
          "ingredients"
        ],
        "properties": {
          "id": {
            "type": "string"
          },
          "type": {
            "type": "string"
          },
          "ingredients": {
            "type": "array",
            "items": {
              "type": "object",
              "required": [
                "id",
                "count",
                "slot",
                "input"
              ],
              "properties": {
                "id": {
                  "type": "string"
                },
                "count": {
                  "type": "integer"
                },
                "slot": {
                  "type": "integer"
                },
                "input": {
                  "type": "boolean"
                }
              },
              "additionalProperties": false
            }
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
