{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Sinytra Wiki Base Game Recipe",
  "description": "Common properties shared by all recipe formats",
  "type": "object",
  "properties": {
    "type": {
      "type": "string"
    },
    "input": {
      "$ref": "#/definitions/slots"
    },
    "output": {
      "$ref": "#/definitions/slots"
    }
  },
  "definitions": {
    "slots": {
      "title": "slots",
      "description": "Recipe ingredient slot mapping.",
      "type": "object",
      "patternProperties": {
        "^.{1,255}$": {
          "oneOf": [
            {
              "type": "string"
            },
            {
              "type": "object",
              "properties": {
                "id": {"type": "string"},
                "count": {"type": "integer"}
              },
              "required": ["id"]
            }
          ]
        }
      },
      "additionalProperties": false
    }
  },
  "required": [
    "type",
    "input",
    "output"
  ]
}