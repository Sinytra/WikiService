{
  "rdbms": "postgresql",
  "host": "127.0.0.1",
  "port": 5432,
  "dbname": "postgres",
  "schema": "public",
  "user": "postgres",
  "password": "postgres",
  "tables": ["mod"],
  "convert": {
    "enabled": false,
    "items": [
      {
        "table": "user",
        "column": "password",
        "method": {
          "after_db_read": "decrypt_password",
          "before_db_write": "encrypt_password"
        },
        "includes": [
          "\"file_local_search_path.h\"",
          "<file_in_global_search_path.h>"
        ]
      }
    ]
  },
  "relationships": {
    "enabled": false,
    "items": [
      {
        "type": "has many",
        "original_table_name": "items",
        "original_table_alias": "item",
        "original_key": "id",
        "target_table_name": "recipes",
        "target_table_alias": "",
        "target_key": "result_id",
        "enable_reverse": true
      },
      {
        "type": "has many",
        "original_table_name": "recipes",
        "original_table_alias": "recipe",
        "original_key": "id",
        "target_table_name": "ingredients",
        "target_table_alias": "",
        "target_key": "recipe_id",
        "enable_reverse": true
      },
      {
        "type": "many to many",
        "original_table_name": "items",
        "original_table_alias": "",
        "original_key": "id",
        "pivot_table": {
          "table_name": "ingredient_items",
          "original_key": "item_id",
          "target_key": "ingredient_id"
        },
        "target_table_name": "ingredients",
        "target_table_alias": "",
        "target_key": "id",
        "enable_reverse": true
      },
      {
        "type": "has many",
        "original_table_name": "tags",
        "original_table_alias": "tag",
        "original_key": "id",
        "target_table_name": "ingredients",
        "target_table_alias": "",
        "target_key": "tag_id",
        "enable_reverse": true
      },
      {
        "type": "many to many",
        "original_table_name": "items",
        "original_table_alias": "",
        "original_key": "id",
        "pivot_table": {
          "table_name": "tag_items",
          "original_key": "item_id",
          "target_key": "tag_id"
        },
        "target_table_name": "tags",
        "target_table_alias": "",
        "target_key": "id",
        "enable_reverse": true
      }
    ]
  },
  "restful_api_controllers": {
    "enabled": false,
    "resource_uri": "/*",
    "class_name": "Restful*Ctrl",
    "filters": [],
    "db_client": {
      "name": "default",
      "is_fast": false
    },
    "directory": "src/controllers",
    "generate_base_only": false
  }
}
